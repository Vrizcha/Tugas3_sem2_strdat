/**
 *
 * @author Windows 8.1
 */
public class sort {
    public static void main(String[] args) {
        //deklarasi array
        int[] numbers = new int [50];//panjang array
      
        Scanner scan = new Scanner(System.in);//scanner unruk mengambil input
        
        System.out.println("Masukkan angka");//meanampilkan masukkan angka
        for(int i = 0; i < numbers.length; i++){//looping
            numbers[i] = scan.nextInt();
        }
        
        //menampilkan array yang tidak urut
        System.out.println("Unordered list of my array");//menampilkan Unordered list of my array
        for(int unorderedArray : numbers){//for each
            System.out.println(unorderedArray);//menampilkan hasil unorderedArray
        }
        
        //looping agar angka menjadi urut 
        for(int i = 0; i < numbers.length; i++) {//melooping
            for (int j = 0; j < numbers.length - 1; j++) {//setiap kali melooping numbers akan dikurangi 1
                //if the numbers are not in order
                if (numbers[j] > numbers[j + 1]) {
                    //swap the numbers
                    int temp = numbers[j];
                    numbers[j] = numbers[j + 1];
                    numbers[j + 1] = temp;   
                }//endif
            }//endfor
        }//endfor
        
        System.out.println("Ordered list using selesction sort");//menampilkan Ordered list using selesction sort
        for(int orderedArray : numbers){//for each
            System.out.println(orderedArray);//menampilkan hasil orderedArray
        }
        
                

        
    }
}
